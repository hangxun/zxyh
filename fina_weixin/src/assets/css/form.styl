.form
  padding-top: 26px
  .login-type
    margin-bottom: 37px
    font-size: 0
    text-align: center
    button
      width: 120px
      height: 40px
      font-size: 14px
      outline: none
      color: main-color
      border: 1px solid main-color
      background-color: #fff
      &.active
        color: #fff
        background-color: main-color
      &:first-child
        border-right-color: transparent
        border-top-left-radius: 6px
        border-bottom-left-radius: 6px
      &:last-child
        border-left-color: transparent
        border-top-right-radius: 6px
        border-bottom-right-radius: 6px

  .form-item
    display: block
    position: relative
    height: 54px
    //height: 44px
    //border-bottom: 1px solid #d9d9d9
    margin-bottom: 1px
    background-color: #fff
    &:last-child
      margin-bottom: 0
    input
      width: 100%
      height: 100%
      padding-left: 80px
      color: #999
      font-size: 14px
      outline: none
      border: none
      /*border-1px(rgb(255,0,0))*/
    .icon
      position: absolute
      top: 50%
      left: 31px
      width: 24px
      height: 24px
      transform: translateY(-50%)
      background-size: 24px 24px
    .icon-lock
      background-image: url("./img/lock.png")
    .icon-mobile
      background-image: url("./img/mobile.png")
    .icon-testCode
      background-image: url("./img/testCode.png")
    .icon-lockNew
      background-image: url("./img/lockNew.png")
    .icon-msg
      background-image: url("./img/icon_msg.png")
    .form-item-right
      position: absolute
      top: 50%
      right: 0
      transform: translateY(-50%)
      //padding: 0 18px
      text-align: center
      color: main-color
      font-size: 15px
    .code
      width: 114px
      height: 36px
      line-height: 36px
      font-size: 13px
    .code:before
      content: ''
      height: 100%
      padding-left: 1px
      background-color: main-color
      display: inline-block
      position: absolute
      left: 0
    .icon-password-show
      position: absolute
      top: 50%
      right: 40px
      transform: translateY(-50%)
      width: 24px
      height: 24px;
      background: url("./img/icon_password_show.png") no-repeat
      background-size: 24px 24px
    .icon-password-hide
      position: absolute
      top: 50%
      right: 40px
      transform: translateY(-50%)
      width: 24px
      height: 24px
      background: url("./img/icon_password_hide.png") no-repeat
      background-size: 24px 24px
    .arrow
      position: absolute
      top: 50%
      right: 15px
      transform: translateY(-50%)
      color: #999
      font-size: 30px

.reset-psw-title
  padding: 15px
  color: main-color
  font-size: 14px

.form-btn
  margin: 56px 0 29px 0

.hint
  line-height: 20px
  text-align: center
  color: #999
  font-size: 15px
  a
    color: main-color
  span
    color: main-color
